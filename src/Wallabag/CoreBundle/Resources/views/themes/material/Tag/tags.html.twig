{% extends "WallabagCoreBundle::layout.html.twig" %}

{% block title "Tags" %}

{% block content %}
    <div class="results clearfix">
        <div class="nb-results left">{% transchoice tags.count %}{0} There is no tag.|{1} There is one tag.|]1,Inf[ There are %count% tags.{% endtranschoice %}</div>
    </div>
    <br />
    <ul class="row data">
    {% for tag in tags %}
        <li id="tag-{{ tag.id|e }}" class="col l4 m6 s12"><a href="{{ path('tag_entries', { 'tag': tag.id|e }) }}">{{tag.label}}</a>({{ tag.entries.getValues | length }})</li>
    {% endfor %}
    </ul>
{% endblock %}
